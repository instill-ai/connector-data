{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BigQuery Connector Spec",
  "type": "object",
  "required": [
    "json_key",
    "project_id",
    "dataset_id",
    "table_name",
    "schema"
  ],
  "additionalProperties": false,
  "properties": {
    "json_key": {
      "title": "JSON Key File contents",
      "description": "Contents of the JSON key file with access to the bucket.",
      "type": "string",
      "credential_field": true
    },
    "project_id": {
      "title": "BigQuery Project ID",
      "description": "Fill in your BigQuery Project ID.",
      "type": "string"
    },
    "dataset_id": {
      "title": "BigQuery Dataset ID",
      "description": "Fill in your BigQuery Dataset ID.",
      "type": "string"
    },
    "table_name": {
      "title": "BigQuery Table Name",
      "description": "Fill in your BigQuery Table Name.",
      "type": "string"
    },
    "schema": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "maxLength": {
            "type": "string"
          },
          "precision": {
            "type": "string"
          },
          "scale": {
            "type": "string"
          },
          "collation": {
            "type": "string"
          },
          "defaultValueExpression": {
            "type": "string"
          }
        }
      }
    }
  }
}